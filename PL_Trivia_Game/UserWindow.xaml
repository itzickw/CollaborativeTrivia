<Window x:Class="PL1.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL1"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800">
    <Grid x:Name="mainGrid" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="בחר קטגוריה" FontSize="30" FontWeight="UltraBlack" HorizontalAlignment="Center" Margin="10" Height="66" Width="466"/>
        <WrapPanel Grid.Row="2" x:Name="categoriesButtons" HorizontalAlignment="Center"/>
    </Grid>
</Window>
