<Window x:Class="PL1.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL1"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="userName" HorizontalAlignment="Center" Margin="0,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                 />
        <Label Content="הכנס שם משתמש" HorizontalAlignment="Left" Margin="168,80,0,0" VerticalAlignment="Top" Height="22" Width="114"/>
        <TextBox x:Name="passw" HorizontalAlignment="Center" Margin="0,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="הכנס סיסמה" HorizontalAlignment="Left" Margin="187,172,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox x:Name="checkingPassw" Margin="0,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="הכנס שוב סיסמה" HorizontalAlignment="Left" Margin="175,213,0,0" VerticalAlignment="Top"/>
        <Button Content="הרשמה"
                Click="RegisteredClick"
                HorizontalAlignment="Left" Margin="244,309,0,0" VerticalAlignment="Top" Height="60" Width="128"/>

    </Grid>
</Window>
